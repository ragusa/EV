subsection problem
   # Problem names:
   #   void
   #   absorber
   #   void_to_absorber
   #   sourcevoid_to_absorber
   #   crooked_pipe
   #   obstruction
   #   three_region
   #   mms_tsinx    (TR:t*sin(pi*x)        SS:sin(pi*x))
   #   mms_xexpt    (TR:x*exp(-t)          SS:N/A      )
   #   mms_exptsinx (TR:exp(-t)*sin(pi*x)  SS:N/A      )
   #   mms_xt       (TR:x*t                SS:x        )
   #   mms_t        (TR:t                  SS:1        )
   set problem name = absorber
end

subsection scheme
   set scheme            = high         # low|high|fct
   set low order scheme  = standard     # constant|lax|dmp|di_visc|di_diff
   set high order scheme = entropy_visc # galerkin|entropy_visc|entropy_diff
end

subsection time
   set end time = 0.1
   set time step size = 0.001
   set use adaptive time stepping = false
   set cfl = 0.5
   set time discretization = ssprk       # <ss|theta|ssprk>
   set entropy time discretization = BE  # <CN|BE|BDF2>
   set ssprk method = FE                 # <FE|SSP2|SSP3>
   set theta method = BE                 # <FE|CN|BE>
end

subsection entropy viscosity
   set Entropy string               = 0.5*u*u
   set Entropy derivative string    = u
   set Entropy residual coefficient = 1.0
   set Jump coefficient             = 1.0
end

subsection fct
   set fct initialization option = zero # <zero|low|high>
   set do not limit = false
   set skip fct if bounds satisfied = false
   set use cumulative antidiffusion algorithm = true
   set include analytic bounds = false
end

subsection refinement
   set refine space = true
   set refine time = true
   set time refinement factor = 0.5 # (0.5)^(2/3) = 0.6299605
   set use adaptive refinement = false
   set initial refinement level = 5
   set number of refinement cycles = 1
   set use cell size for convergence rates = false
end

subsection finite element
   set finite element degree = 1
end

subsection quadrature
   set number of quadrature points = 3
end

subsection linear solver
   set linear solver option = 1   # 1 = UMFPACK direct solve
end

subsection nonlinear solver
   set nonlinear solver option = 1   # 1 = defect correction
   set nonlinear tolerance = 1.0e-10
   set nonlinear max iteration = 1000
   set relaxation factor = 1.0
end

subsection output
   set output mesh              = false
   set output exact solution    = true
   set exact solution refinement level = 7
   set output initial solution  = false 
   set output DMP bounds        = false
   set save convergence results = false
   set print solution           = false
end
