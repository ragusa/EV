subsection problem
   # 1 = pure absorber
   # 2 = void-to-absorber
   # 3 = void
   # 5 = MMS-1
   # 6 = MMS-2
   # 7 = MMS-3
   # 8 = source in left half
   # 9 = MMS-4
   # 10 = MMS-5
   # 11 = skew void-to-absorber
   set Problem ID = 11
end

subsection time
   set Is steady state = false
   set End time = 1.0
   set Time step size = 1.0
   set CFL limit = 0.5
   set Time integrator option = SSP3 # <FE|SSP2|SSP3>
end

subsection scheme
   # 0 = Galerkin
   # 1 = low-order
   # 2 = EV
   # 3 = EV+FCT
   # 4 = Galerkin+FCT
   set Scheme option = 4
end

subsection entropy viscosity
   set Entropy string = 0.5*u*u
   set Entropy derivative string = u
   set Entropy residual coefficient = 1.0e-1
   set Jump coefficient = 1.0e-1
   set EV temporal discretization = BE # <FE|BE|CN|BDF2>
end

subsection fct
   set Do not limit = false
end

subsection refinement
   set Refinement mode = space # <space|time>
   set Time refinement factor = 0.5
   set Use adaptive refinement = false
   set Initial refinement level = 5
   set Number of refinement cycles = 1
end

subsection finite element
   set Finite element degree = 1
   set Number of quadrature points = 10
end

subsection linear solver
   set Linear solver option = 1 # 1 = UMFPACK direct solve
end

subsection output
   set Output mesh = false
   set Output exact solution = true
   set Output initial solution = false 
   set Output DMP bounds = true
   set Save convergence results = true
end
