# problem options
#    Problem ID:
#     ID  case        source   sigma       BC  
#     --------------------------------------------------------
#     1   homogeneous constant constant    Dirichlet
#     2   hetero      zero     PW constant Dirichlet
#     3   advection   zero     zero        Dirichlet
#     4   decay       zero     constant    Dirichlet
#     5   MMS         MMS      constant    zero Dirichlet
set Problem ID = 5

# transient options
set Is steady state = false
set End time = 0.0001
set Time step size = 0.00001
set CFL limit = 1.0
#    Time integrator option:
#     1: forward Euler
#     2: SSPRK33
set Time integrator option = 2

# artificial viscosity options
#    Scheme option:
#     0: high-order Galerkin scheme
#     1: low-order scheme
#     2: high-order EV scheme
#     3: FCT scheme
set Scheme option = 0
set Entropy viscosity coefficient = 1.0
set Jump coefficient = 1.0
set Do not limit = true

# refinement options
#    Refinement option:
#     1: refine space only
#     2: refine time only
#     3: refine both space and time
set Refinement option = 1
set Time refinement factor = 0.5
set Use adaptive mesh refinement = false
set Number of refinement cycles = 3
# level  cells
# 1      2
# 2      4
# 3      8
# 4      16
# 5      32
# ...    ...
# n      2^n
set Initial refinement level = 5

# finite element options
set Finite element degree = 1
set Number of quadrature points = 10

# linear solver options
#    Linear solver option: 
#     1: direct linear solve using UMFPACK
#     2: Bi conjugate gradient stabilized (BiCGstab) solver
set Linear solver option = 1
#    Preconditioner option:
#     1: none (identity matrix)
#     2: Jacobi
set Preconditioner option = 1

# output options
set Output mesh = false
set Output exact solution = true
set Output initial solution = false 
set Output DMP bounds = true
