# problem options
set Problem ID = 1

# transient options
set Is steady state = false
set End time = 0.05
set Time step size = 0.01

# artificial viscosity options
# 0: no artificial viscosity
# 1: old first order viscosity with tuning parameter
# 2: old entropy viscosity
# 3: first order viscosity (maximum-principle preserving)
# 4: high order viscosity (maximum-principle preserving with limiter)
set Viscosity option = 1
set Old first order viscosity coefficient = 0.5e0
set Entropy viscosity coefficient = 1.0e-1

# mesh refinement options
set Use adaptive mesh refinement = false
set Number of refinement cycles = 4
set Initial refinement level = 4

# finite element options
set Finite element degree = 1
set Lump mass matrix = true

# linear solver options
set Solver option = 1
set Preconditioner option = 1

# nonlinear solver options
set Maximum number of nonlinear iterations = 10
set Relative difference tolerance = 1.0e-6

# output options
set Output mesh = false
set Output exact solution = true
set Output initial solution = false 
