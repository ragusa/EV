# problem options
# 1: constant source, constant cross section, incoming flux
# 2: no source, heterogeneous cross section, incoming flux
# 3: no source, zero cross section, incoming flux
# 4: no source, homogeneous cross section, incoming flux
set Problem ID = 2

# transient options
set Is steady state = false
set End time = 2.0
set Time step size = 0.1
set CFL limit = 0.9

# time integrator options
# 0: forward Euler
# 1: SSPRK33
set Time integrator option = 1

# artificial viscosity options
# 0: high-order Galerkin scheme
# 1: low-order scheme
# 2: high-order EV scheme
# 3: FCT scheme
set Scheme option = 2
set Entropy viscosity coefficient = 1.0
set Jump coefficient = 1.0
set Do not limit = true

# mesh refinement options
set Use adaptive mesh refinement = false
set Number of refinement cycles = 1
set Initial refinement level = 5

# finite element options
set Finite element degree = 1

# linear solver options
# option for linear solver
# 1: direct linear solve using UMFPACK
# 2: Bi conjugate gradient stabilized (BiCGstab) solver
set Solver option = 1
# preconditioner option for BiCGstab
# 1: none (identity matrix)
# 2: Jacobi
set Preconditioner option = 1

# output options
set Output mesh = false
set Output exact solution = true
set Output initial solution = false 
set Output DMP bounds = true
