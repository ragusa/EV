subsection finite element
   set degree = 1
end

subsection quadrature
   set number of quadrature points = 3
end

# Problem IDs:
# 0: 1-D sinusoidal IC problem
# 1: 1-D shock Riemann problem
# 2: 1-D rarefaction Riemann problem
# 3: 2-D problem
subsection problem
   set problem id = 2
end

subsection refinement
   set initial refinement level = 6
   set refinement cycles = 1
   set refinement fraction = 0.5
   set coarsening fraction = 0.01
end

subsection time
   # options are <constant_dt|cfl_condition>
   set time step size method = cfl_condition
   set final time = 0.5
   set time step size = 0.001
   set cfl = 0.25
end

subsection artificial viscosity
   # options are <none|constant|old_first_order|max_principle|entropy>
   set viscosity type = old_first_order
   set constant viscosity value = 0.02
   set first order viscosity coefficient = 0.5
   set entropy viscosity coefficient = 2.0
   set jump coefficient = 4.0
   set add jumps = true
end

subsection temporal integration
   # options are <runge_kutta>
   set temporal integrator = runge_kutta
   # options are <erk1|erk2|erk3|erk4|sdirk22>
   set runge kutta method = erk1
end

subsection nonlinear solver
   set nonlinear verbosity = verbose
   set nonlinear method = newton
   set nonlinear absolute tolerance = 1e-6
   set nonlinear relative tolerance = 1e-6
   set max nonlinear iterations = 15
   set damping = 0.9
end

subsection linear solver
   set linear verbosity = verbose
   set linear method = direct
   set mass matrix linear method = direct
   set linear absolute tolerance = 1e-10
   set linear relative tolerance = 1e-10
   set max linear iterations = 150
end

subsection output
   set output period = 0
   set output mass matrix = false
   set output viscosity = false
end
